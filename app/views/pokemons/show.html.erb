<h1>今出たポケモン</h1>

<% if current_user.points >= 10 %>
  <%= link_to "もう一度引く(#{ current_user.points / 10 }回)", new_pokemon_path %>
<% end %>

<div class="card mx-auto animate__bounceIn" style="width: 28rem;">
  <p class="card-text">No. <%= @pokemon.poke_no %></p>
  <svg class="bd-placeholder-img card-img-top" width="100%" height="50" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap">
    <title>Pokemon</title>
    <%= image_tag @pokemon.img %>
  </svg>
  <div class="card-body text-center">
    <h5 class="card-title"><%= @pokemon.name %></h5>
    <p class="card-text">Type: <%= @pokemon.pokemon_type %></p>
    <%= link_to 'ポケモン一覧', pokemons_path, class: 'btn btn-primary' %>
  </div>
</div>