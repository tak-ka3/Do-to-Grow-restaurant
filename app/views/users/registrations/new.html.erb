<h2>登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-template todo-form bg-light">
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-group float-item me-2 mb-3 fw-bold">
      <%= f.label "名前" %><br />
      <%= f.text_field :name, autocomplete: "name", class:'form-control' %>
    </div>

    <div class="form-group float-item me-2 mb-3 fw-bold">
      <%= f.label "居住都道府県" %>
      <em>(ex: 神奈川)</em><br />
      <%= f.select :prefecture, Prefecture.all.pluck(:name, :p_id), {}, {id: "p_id", class:'form-control'} %>
    </div>

    <div class="form-group float-item me-2 mb-3 fw-bold">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
    </div>

    <div class="form-group float-item me-2 mb-3 fw-bold">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
    </div>

    <div class="form-group float-item me-2 mb-3 fw-bold">
      <%= f.label "パスワード" %>
      <em>(確認用)</em><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
    </div>

    <div class="submit-button text-center">
      <%= f.submit "登録する", class: "btn-lg btn-warning mt-2" %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
